#!/bin/bash

# For matching file names on file systems without case distinction (e.g. case-insensitive HFS)
shopt -s nocasematch

RESULT=$(ocamlfind ocamldep $@)
STATUS=$?
PREFIXED=""
if [[ "$RESULT" =~ src/av/av_.*\.mli?:.* ]]; then
    for i in $RESULT; do
        [[ "$i" =~ .*: || "$i" =~ Why_[^o].* ]] || PREFIXED="$PREFIXED Av_$(echo $i | tr '[A-Z]' '[a-z]')"
    done
fi
echo $RESULT $PREFIXED
exit $STATUS
