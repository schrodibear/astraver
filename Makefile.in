include Version

src/version.ml: Version Makefile
	echo "let coqversion = \""@COQVER@"\"" > $@
	echo "let version = \""$(VERSION)"\"" >> $@
	echo "let date = \""`date`"\"" >> $@
	echo "let libdir = \""$(LIBDIR)/why"\"" >> $@

jc/jc_version.ml: Version Makefile
	echo "let version = \""$(JCVERSION)"\"" > $@
	echo "let date = \""`date`"\"" >> $@
	echo "let libdir = \""$(LIBDIR)/jessie"\"" >> $@

java/java_version.ml: Version Makefile
	echo "let version = \""$(KVERSION)"\"" > $@
	echo "let date = \""`date`"\"" >> $@
	echo "let libdir = \""$(LIBDIR)/krakatoa"\"" >> $@

c/cversion.ml: Version Makefile
	echo "let version = \""$(CVERSION)"\"" > $@
	echo "let date = \""`date`"\"" >> $@
	echo "let libdir = \""$(LIBDIR)/caduceus"\"" >> $@

