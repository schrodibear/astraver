
# AnnotationPolicy = Invariants
# AbstractDomain = Box

/* 
@OPTIONS: -main main 
*/


type intM = { integer val; }


unit f(intM[0..] t, integer offset) {
    var integer i = offset;
    variant 4 - i; 
    while (i <= 4) {
        (t + i).val = 0;
	i++;
    }
}

unit main() {
   var intM[0..] t1 = new intM[5];
   f(t1, 0);
   var intM[0..] t2 = new intM[10];
   f(t2, 2);
}

