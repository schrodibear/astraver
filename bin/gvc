#!/bin/sh

case $1 in
  *.java)
	b=`basename $1 .java`
	krakatoa $1
	jessie $b.jc
	make -f $b.makefile gui
	;;
  *.c)
	b=`basename $1 .c`
	caduceus $1
	make -f $b.makefile gui
	;;
  *.jc)
	b=`basename $1 .jc`
	jessie $b.jc
	make -f $b.makefile gui
	;;
  *)
	echo "don't know what to do with $1"
esac


