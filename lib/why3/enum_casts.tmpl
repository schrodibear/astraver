{% macro th (signed_from, size_from, signed_to, size_to) -%}
{% if signed_from -%}
  {% set u_from = "" %}
  {% set pr_from = "I" %}
{% else -%}
  {% set u_from = "u" %}
  {% set pr_from = "Ui" %}
{% endif -%}
{% if signed_to -%}
  {% set u_to = "" %}
  {% set pr_to = "I" %}
{% else -%}
  {% set u_to = "u" %}
  {% set pr_to = "Ui" %}
{% endif -%}
{% set t_from = pr_from + "nt" + size_from %}
{% set t_to = pr_to + "nt" + size_to %}
theory Bit_{{u_to}}int{{size_to}}_of_bit_{{u_from}}int{{size_from}}
  use {{t_from}}
  use {{t_to}}
  function bw_cast {{t_from}}.t : {{t_to}}.t
  function cast_modulo (n : {{t_from}}.t) : {{t_to}}.t = {{t_to}}.of_int_modulo ({{t_from}}.to_int n)
  axiom Bw_cast_eq:
    forall n : {{t_from}}.t [cast_modulo n | bw_cast n].
      cast_modulo n = bw_cast n
end
{% endmacro -%}
{% set sizes = [8, 16, 32, 64] %}
{% set signs = [true, false] %}
{% for size_from in sizes -%}
{% for sign_from in signs -%}
{% for size_to in sizes -%}
{% for sign_to in signs -%}
{% if !(sign_from == sign_to && size_from == size_to) -%}
{{ th (sign_from, size_from, sign_to, size_to) }}
{% else -%}
{% endif -%}
{% endfor -%}
{% endfor -%}
{% endfor -%}
{% endfor -%}