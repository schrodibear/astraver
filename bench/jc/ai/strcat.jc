
type charP = {
    integer charM;
}

logic integer strlen(charP[..] p) reads (p+[0..]).charM;

unit strcat(charP[..] dest, charP[..] src) {  
    integer i = 0;
    integer j = 0;
    while (dest + i).charM != 0 ; {
	i = i + 1;
    }
    while true ; {
        if ((src + j).charM != 0) {
             (dest + i + j).charM = (src + j).charM;
	     j = j + 1;
	}
    }
}


