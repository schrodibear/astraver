
/*
example taken from "Coping with Type Casts in C"
*/

type Point = {
  integer x;
  integer y;
}

type color = 0..1

type ColorPoint = Point with {
  color c;
}

unit translateX(Point[..] p, integer dx) {
  p.x += dx;
}

unit main(Point[..] pt, ColorPoint[..] cpt) {
  translateX(pt, 1);
  translateX(cpt, 1);
}


