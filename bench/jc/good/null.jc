
type list = {
  integer content;
  list[0] next;
}

unit sum(list[0] l) {
    integer s = 0;
    while (l != null) 
	invariant 0;
        variant 0;
    {
	s += l.content;
	l = l.next;
    }
}

unit nullify(list[0] l) {
    while (l != null) 
	invariant 0;
        variant 0;
    {
	l.content = 0;
	l = l.next;
    }
}


